<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="controller.SeasonController" alignment="CENTER" prefHeight="450.0" prefWidth="350.0" spacing="20" styleClass="background" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">

    
        
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
   <children>
      <Pane prefHeight="185.0" prefWidth="350.0">
         <children>
            <ImageView fitHeight="187.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@NBA_Back.jpg" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="154.0" text="Round" onAction="#round" />
      <Button mnemonicParsing="false" text="Current" onAction="#current" />
      <Button mnemonicParsing="false" text="Game" onAction="#game" />
      <Button mnemonicParsing="false" text="Result" onAction="#record" />
      <Button fx:id="close" mnemonicParsing="false" text="Close" onAction="#close"/>
   </children>
    
</VBox>
