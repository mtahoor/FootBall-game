<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="controller.RecordController" alignment="CENTER" prefHeight="300" prefWidth="500" spacing="20" styleClass="background" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">
   
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
   <children>
      <Pane prefHeight="325.0" prefWidth="500.0">
         <children>
            <Label layoutX="187.0" layoutY="-1.0" text="Season Record" />
            <TableView fx:id="recordTableView" layoutY="36.0" prefHeight="200.0" prefWidth="500.0">
              <columns>
                <TableColumn fx:id="roundColumn" prefWidth="94.0" text="Round" />
                <TableColumn fx:id="gameColumn" prefWidth="114.0" text="Game" />
                  <TableColumn fx:id="winningColumn" prefWidth="142.0" text="Winning Team" />
                  <TableColumn fx:id="losingColumn" prefWidth="141.0" text="Losing Team" />
              </columns>
            </TableView>
         </children>
      </Pane>
      <Button fx:id="close" mnemonicParsing="false" text="Close" onAction="#close" />
   </children>
</VBox>
